    <!-- Base application theme. -->
    <style name="Theme.SmartAttendace" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_color_primary</item>
